# Arch Linux ZSH Environment
# Managed via Installfest - symlinked to ~/.zshenv

# Locale settings
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"
export LC_CTYPE="en_US.UTF-8"

# Default editor
export EDITOR="vim"
export VISUAL="vim"

# Hide computer name in terminal
export DEFAULT_USER="$(whoami)"

# Rust/Cargo
[ -f "$HOME/.cargo/env" ] && source "$HOME/.cargo/env"

# Local bin (uv, pipx, etc)
export PATH="$HOME/.local/bin:$PATH"

# Homelab paths
export HOMELAB_DIR="$HOME/homelab"

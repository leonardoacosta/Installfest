# Bluetooth Devices Configuration
# Copy this file to bluetooth-devices.yml and configure your devices
#
# To find device MAC addresses:
#   1. Run: bluetoothctl
#   2. Type: scan on
#   3. Wait for your device to appear
#   4. Type: devices
#   5. Note the MAC address (format: AA:BB:CC:DD:EE:FF)
#   6. Type: scan off
#   7. Type: exit

devices:
  # Xbox Wireless Controller Example
  - name: "Xbox Controller"
    mac: "AA:BB:CC:DD:EE:FF"
    auto_connect: true

  # Bluetooth Headset Example
  - name: "Bluetooth Headset"
    mac: "11:22:33:44:55:66"
    auto_connect: true

  # Keyboard Example (auto_connect: false means pair but don't auto-connect)
  - name: "Bluetooth Keyboard"
    mac: "77:88:99:AA:BB:CC"
    auto_connect: false

# Notes:
# - auto_connect: true  - Device will connect automatically when in range
# - auto_connect: false - Device will be paired and trusted but not auto-connected
# - Put devices in pairing mode before running setup-bluetooth.sh
# - Some devices may require manual pairing the first time
